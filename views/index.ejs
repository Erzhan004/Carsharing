    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body id="body_home_page">
  <header>
    <div class="bx bx-menu" id="menu-icon"></div>
    <ul class="navbar">
      <a href="#home" class="logo"><img src="/img/26388488_7184626.svg"></a>
      <li><a href="#home" class="lang" key="home">Home</a></li>
      <li><a href="#ride" class="lang" key="guide">Guide</a></li>
      <li><a href="#services" class="lang" key="services">Cars</a></li>
      <li><a href="#about" class="lang" key="about">About</a></li>
      <li><a href="" class="lang news-link" key="news">News Page</a></li>
      <div class="dropdown">
        <a class="dropdown-toggle"  href="#" id="Dropdown" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
           English
        </a>
        <ul class="dropdown-menu" aria-labelledby="Dropdown">
            <li>
                <a class="dropdown-item translate" id="en" href="#">English </a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <a class="dropdown-item translate" id="rus" href="#">Русский</a>
            </li>
  
        </ul>
    </div>
    </ul>
   
 
  </header>
  <section class="home" id="home">
    <div class="text">
      <h1><span class="lang " id="look" key="look">Looking</span><span class="lang " key="to"> to</span>  <br><span class="lang " key="rentcar"> rent car</span> </h1>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Fuga, ipsam assumenda!</p>
    </div>
  </section>

  <section class="ride" id="ride">
    <div class="heading">
      <span class="lang" key="HowItsWork">How Its Work</span>
      <h1 class="lang" key="steps">Rent With Easy 3 Steps</h1>
    </div>
    <div class="ride-container">
      <div class="box">
        <i class='bx bxs-map' ></i>
        <h2 class="lang" key="location">Choose A Location</h2>
        <p class="lang" key="location_text" >Choose a location convenient for you to pick up the car.</p>
      </div>
      <div class="box">
        <i class='bx bxs-calendar-check' ></i>
        <h2 class="lang" key="pick_up">Rental Date</h2>
        <p class="lang" key="pick_up_text">Choose a time convenient for you to pick up the car and a date for returning the car</p>
      </div>
      
      <div class="box">
        <i class='bx bxs-calendar-star' ></i>
        <h2 class="lang" key="book">Book A Car</h2>
        <p class="lang" key="book_text">Choose a car from the list and make a reservation.</p>
      </div>
    </div>
  </section>

  <section class="services" id="services">
    <div class="heading">
      <span class="lang best_cars" key="best_cars">Best Cars</span>
      <h1><span class="lang" key="topDeals">Out Top Deals</span><br> <span class="lang" key="fromTop">From Top Rated Dealers</span></h1>
    </div>
    <div class="services-container">
      <% cars.forEach(car => { %>
      <div class="box">
        <div class="box-img">
          <img src="/carimg/<%=car.img%>" alt="">
        </div>
        <p><%=car.Year%></p>
        <h3> <%=car.Make%> <%=car.Model%></h3>
        <h2>$<%=car.cost%>/h </h2>
        <a href="/carPage/<%=car._id%> " class="btn lang" key="RentNow" > Rent now</a>
      </div>
      <%})%>
    </div>
  </section>
  <section class="about" id="about">
    <div class="heading">
    <span class="lang" id="About" key="ABOUTUS">About Us</span>
    <h1 class="lang"  key="About1" >Who We Are and What We Do</h1>
  </div>
  <div class="about-container">
    <div class="about-img">
      <img src="../img/about.png" alt="">
    </div>
    <div class="about-text">
      <span class="lang" key="ABOUTUS">About Us</span>
      <p class="lang"  key="About2">We are a company specializing in car-sharing services, aiming to make urban transportation convenient, accessible, and environmentally friendly.</p>
      <p class="lang"  key="About3">Our company is a team of professionals deeply committed to the idea of carpooling to reduce the burden on urban infrastructure and minimize harmful emissions.</p>

    </div>
  </div>
  </section>  
